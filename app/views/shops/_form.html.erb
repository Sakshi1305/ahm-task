<%
  # form_for is a rails helper for rendering forms in the view
  # @film is an instance scoped variable that is declared in
  # films_controller new method. It points to a new
  # instance of the Film model
  # f.submit will need a create action
%>


<%= form_for @shop do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>
  <br>
  <%= f.label :shop_no %><br>
  <%= f.text_field :shop_no %><br>
  <br>
  <%= f.label :address %><br>
  <%= f.text_field :address %><br>
  <br>
  <br>
  <%= f.submit %>
<% end %>
